{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Docker Node",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
